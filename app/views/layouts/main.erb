<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Dungeon Tracker <%= title %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= stylesheet_link_tag 'application' %>

    <!--[if lt IE 9]>
    <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>
  <body>
    <div class="container" role="main">
      <div class="grid">
        <header class="unit span-grid" role="banner">
        <% if authenticated? %>
          <div class="logout">
            <a href="<%= url_for(:logout) %>">logout</a>
          </div>
        <% end %>
        <h1 class="site-title"><a href="<%= url(:index) %>">DungeonTracker</a></h1>
        <h2 class="site-tagline">Track dem Dungeons.</h2>
        </header>

        <hr class="unit span-grid">

        <%= yield %>
      </div>
    </div>

    <%= javascript_include_tag  'jquery-2.1.0.min' %>
    <%= javascript_include_tag  'application' %>

    <!--
    ENV: <%= Padrino.env %>
    -->
  </body>
</html>
